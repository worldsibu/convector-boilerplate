{
  "name": "convector-boilderplate",
  "version": "1.0.0",
  "description": "Boilderplate for a Convector project",
  "author": "Diego Barahona <diestrin@gmail.com>",
  "license": "Apache-2.0",
  "scripts": {
    "================= Life cycle =================": "==================================",
    "install": "npm-run-all -s lerna:install",
    "init": "npm-run-all -s env:init 'cc:start -- 1'",
    "start": "npm-run-all -s env:start lerna:start",
    "clean": "npm-run-all -s env:stop env:clean",
    "restart": "npm-run-all -s clean install env:start init lerna:start",
    "================= Lerna =================": "==================================",
    "lerna:install": "lerna bootstrap",
    "lerna:build": "lerna run build",
    "lerna:start": "lerna run start --parallel",
    "lerna:stop": "lerna run stop --parallel",
    "lerna:clean": "lerna clean --yes && lerna run clean --parallel",
    "lerna:test": "lerna run test",
    "lerna:lint": "lerna run lint",
    "lerna:test:module": "f() { lerna exec --scope $1 -- npm run test -- --inspect$2; }; f",
    "================= Dev Env =================": "==================================",
    "env:init": "./node_modules/@worldsibu/convector-tool-dev-env/scripts/init.sh",
    "env:start": "./node_modules/@worldsibu/convector-tool-dev-env/scripts/start.sh",
    "env:stop": "./node_modules/@worldsibu/convector-tool-dev-env/scripts/stop.sh",
    "env:restart": "./node_modules/@worldsibu/convector-tool-dev-env/scripts/restart.sh",
    "env:clean": "./node_modules/@worldsibu/convector-tool-dev-env/scripts/clean.sh",
    "================= Chaincodes =================": "==================================",
    "cc:start": "f() { npm-run-all -s cc:package \"cc:install -- org1 $1\" \"cc:install -- org2 $1\" \"cc:instantiate -- $1\"; }; f",
    "cc:package": "chaincode-manager --config ./org1.chaincode.config.json --output ./chaincode package",
    "cc:install": "f() { chaincode-manager --config ./$1.chaincode.config.json install ./chaincode tellus $2; }; f",
    "cc:instantiate": "chaincode-manager --config ./org1.chaincode.config.json instantiate tellus",
    "cc:upgrade": "chaincode-manager --config ./org1.chaincode.config.json upgrade tellus",
    "cc:invoke": "f() { chaincode-manager --config ./$1.chaincode.config.json invoke tellus $@; }; f"
  },
  "devDependencies": {
    "@theledger/fabric-mock-stub": "^1.0.1",
    "@theledger/fabric-shim-crypto-types": "^1.0.4",
    "@theledger/fabric-shim-types": "^1.0.6",
    "@types/bytebuffer": "^5.0.37",
    "@types/chai": "^4.0.4",
    "@types/mocha": "^2.2.43",
    "@types/node": "^10.3.2",
    "@types/uuid": "^3.4.3",
    "@types/yup": "^0.24.4",
    "@worldsibu/convector-tool-chaincode-manager": "1.1.8",
    "@worldsibu/convector-tool-dev-env": "1.1.8",
    "chai": "^4.1.2",
    "fabric-ca-client": "^1.1.2",
    "fabric-client": "^1.1.2",
    "grpc": "^1.11.3",
    "lerna": "^2.11.0",
    "npm-run-all": "^4.1.3",
    "uuid": "^3.2.1"
  }
}
